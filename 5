const translations = {
  de: {
    "nav.home":"Home", "nav.shop":"Shop", "nav.cart":"Warenkorb",
    "hero.title":"Elektro-Schmuck & Tierbedarf",
    "hero.subtitle":"Style für dich, Komfort für dein Tier",
    "hero.cta":"Jetzt shoppen",
    "shop.title":"Unsere Produkte",
    "cart.title":"Warenkorb",
    "cart.checkout":"Zur Kasse"
  },
  en: {
    "nav.home":"Home", "nav.shop":"Shop", "nav.cart":"Cart",
    "hero.title":"Electro Jewelry & Pet Supplies",
    "hero.subtitle":"Style for you, comfort for your pet",
    "hero.cta":"Shop Now",
    "shop.title":"Our Products",
    "cart.title":"Cart",
    "cart.checkout":"Checkout"
  }
};

function applyTranslations(lang){
  document.querySelectorAll('[data-i18n]').forEach(el=>{
    const key = el.getAttribute('data-i18n');
    if(translations[lang] && translations[lang][key]) el.textContent = translations[lang][key];
  });
}
document.getElementById('lang-select')?.addEventListener('change', e=>{
  applyTranslations(e.target.value);
  localStorage.setItem('lang', e.target.value);
});
const savedLang = localStorage.getItem('lang') || 'de';
document.getElementById('lang-select').value = savedLang;
applyTranslations(savedLang);
document.getElementById('year').textContent = new Date().getFullYear();
